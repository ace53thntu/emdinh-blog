---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const ogImage = new URL('/og/home.png', Astro.site).toString();
const pageTitle = "Twitter Card Debug - Em Dinh Blog";
const pageDesc = "This page is used to test Twitter/X card rendering with static OG images.";
---

<Layout 
  title={pageTitle}
  description={pageDesc}
>
  <div class="layout-grid-right" slot="right">
    <Card>
      <h1>Twitter Card Debug</h1>
      <p>This page is specifically designed to test Twitter/X card rendering.</p>
      
      <div style="margin: 2rem 0;">
        <h2>Twitter Card Info</h2>
        <ul>
          <li><strong>Card type:</strong> summary_large_image</li>
          <li><strong>Image URL:</strong> {ogImage}</li>
          <li><strong>Image dimensions:</strong> 1200Ã—630 pixels</li>
        </ul>
      </div>
      
      <div>
        <h2>Twitter Card Preview</h2>
        <img 
          src={ogImage} 
          alt="Twitter Card Preview" 
          style="max-width: 100%; border: 1px solid #eaeaea; border-radius: 8px;" 
        />
      </div>
      
      <div style="margin-top: 2rem;">
        <h2>Testing Steps</h2>
        <ol>
          <li>Share this URL on Twitter/X: <code>{Astro.url.href}</code></li>
          <li>Check if the card appears with the image</li>
          <li>If not, use <a href="https://cards-dev.twitter.com/validator" target="_blank">Twitter's Card Validator</a></li>
        </ol>
      </div>
    </Card>
  </div>
</Layout>

<style>
  h1 {
    margin-top: 0;
  }
  code {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }
</style> 