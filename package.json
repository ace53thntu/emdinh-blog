    "@iconify-json/lucide": "^1.2.20",
    "@iconify-json/simple-icons": "^1.2.18",
    "@iconify/utils": "^2.2.1",
    "@resvg/resvg-js": "^2.6.2",
    "@shikijs/themes": "^1.26.1",
    "astro": "^5.5.2",
    "astro-expressive-code": "^0.38.3",
    "rehype-mermaid": "^3.0.0",
    "satori": "^0.12.2",
    "satori-html": "^0.3.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/glob": "^8.1.0",
    "glob": "^11.0.2",
    "pagefind": "^1.3.0",
    "playwright": "^1.52.0",
    "shiki": "^1.26.1",
    "tsx": "^4.19.4"
  }
