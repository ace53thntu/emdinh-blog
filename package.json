{
  "name": "emdinh-blog",
  "type": "module",
  "version": "1.0.2",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "node -e \"process.env.VERCEL ? require('child_process').execSync('pnpm exec playwright install --with-deps=false', {stdio: 'inherit'}) : require('child_process').execSync('pnpm exec playwright install-deps', {stdio: 'inherit'})\"",
    "build": "astro build",
    "start": "node dist/server/entry.mjs",
